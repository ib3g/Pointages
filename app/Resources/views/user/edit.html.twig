{% extends 'base.html.twig' %}

{% block body %}
<div class="col-md-4 col-md-offset-4">
    <div class="panel panel-primary  ">
        <div class="panel-heading">
            <h3>Edit</h3>
        </div>
            <div class="panel-body">
                    {{ form_start(edit_form) }}
                    <div class="form-group">

                            {{ form_row(edit_form.nom) }}

                            {{ form_row(edit_form.prenom) }}

                            {{ form_row(edit_form.username) }}

                            {{ form_row(edit_form.email) }}

                            {{ form_row(edit_form.password) }}

                    </div>
                    <input type="submit" value="Edit" class="btn btn-info pull-right" />

                    {{ form_end(edit_form) }}
            </div>
        <a href="{{ path('user_index') }}" class="btn btn-primary pull-left">Back to the list</a>
        {{ form_start(delete_form) }}
        <input type="submit" value="Delete" class="btn btn-danger ">
        {{ form_end(delete_form) }}
    </div>
</div>
{% endblock %}
