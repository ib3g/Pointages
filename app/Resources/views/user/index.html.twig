{% extends 'base.html.twig' %}

{% block body %}
<div class="panel panel-primary  ">
    <div class="panel-heading">
        <h3>Listes Utilisateurs</h3>
    </div>
    <div class="panel-body">
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom</th>
                <th scope="col">Prenom</th>
                <th scope="col">Username</th>
                <th scope="col">Email</th>
                <th scope="col" style="text-align: center;">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <th scope="row"><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></th>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <ul style="text-align: center;">
                            <a class="btn btn-warning"  href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                            <a class="btn btn-info"  href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </div>
    </div>
</div>
    <ul>
            <a class="btn btn-primary" href="{{ path('user_new') }}">Create a new user</a>
    </ul>
{% endblock %}
