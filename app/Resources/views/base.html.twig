<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Pointages!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css">
        <link href=" https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    </head>
    <body style="background-color: #ccd2d5">
    <nav class="navbar navbar-default " >
        <div class="container">
            <div class="navbar-header">
                <a href="{{ path('homepage') }}" class="navbar-brand text-info"> Accueil </a>
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <a href="{{ path('pointage_index') }}" class="navbar-brand text-info"> Pointages </a>
                        <a href="{{ path('user_index') }}" class="navbar-brand text-info"> Utilisateurs </a>
                {% endif %}
            </div>
            <div class="nav navbar-nav navbar-right">
                <ul >
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            <div class="dropdown">
                                <a class="btn btn dropdown-toggle" type="button" data-toggle="dropdown" id="dropdownMenuButton" aria-haspopup="true" aria-expanded="false">  {{ app.user.username }} | Connecté <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="{{ path('user_show', { 'id': app.user.id }) }}">Profil</a></li>
                                    <li><a href="{{ path('logout') }}" class="text-danger" style="color: #ff5e0b"><span class="glyphicon glyphicon-log-out"></span> Déconnexion </a></li>
                                </ul>
                            </div>
                        {% else %}
                            <div>
                                <a href="{{ path('register') }}"><span class="glyphicon glyphicon-user"></span> Sign Up</a>
                                <a href="{{ path('login') }}"><span class="glyphicon glyphicon-log-in"></span> Login</a>
                           </div>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
        <div class="container">
            {% block body %}{% endblock %}
        </div>
            {% block javascripts %}
            {% endblock %}
    </body>
</html>
